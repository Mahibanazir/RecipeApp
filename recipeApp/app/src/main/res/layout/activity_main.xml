<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/foreground_design"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="358dp"
        android:layout_height="172dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="460dp"
        app:cardCornerRadius="25dp"
        >

        <ImageView
            android:id="@+id/indianimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/indiancard"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/btnIndia"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/akaya_telivigala"
            android:text="Indian Cuisine"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"

            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="358dp"
        android:layout_height="172dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="270dp"
        app:cardCornerRadius="25dp"

        >
        <ImageView
            android:id="@+id/pakistaniimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pakistanicard"
            android:scaleType="centerCrop"
            />

        <Button
            android:id="@+id/btnPakistan"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/akaya_telivigala"
            android:text="Pakistan Cuisine"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"

            />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="358dp"
        android:layout_height="172dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/italianimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/italiancard" />

        <Button
            android:id="@+id/btnItalian"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="110dp"
            android:fontFamily="@font/akaya_telivigala"
            android:text="Italian Cuisine"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"

            />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="655dp"
        android:layout_marginEnd="24dp"
        app:srcCompat="@android:drawable/ic_input_add" />
</RelativeLayout>